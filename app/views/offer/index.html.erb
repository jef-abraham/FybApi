<div class="container">

  <div class="row">
       <div class="col-sm-12">
         <div class="panel panel-primary">
           <div class="panel-heading">
             <h3 class="panel-title">Search Offers</h3>
           </div>
           <div class="panel-body">
             <form method="get" id="frm_offers" class="form-inline">
	       <label for="uid">UId:</label>
	       <input class="form-control" type="text" name="uid" value='player1'/>
	       
	       <label for="pub0">Pub0:</label>
	       <input type="text" name="pub0" value='campaign2'/>
	       
	       <label for="page">Page #:</label>
	       <input type="text" name="page" value="1"/>
	       
	       <input type="submit" name="submit_button" value="Get Offers" class="btn btn-primary"/>
	     </form>
           </div>
         </div>
       </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
  <% if @offers %>
  <div class="panel panel-primary filterable">
    <div class="panel-heading">
      <h3 class="panel-title">Offers</h3>
    </div>
    <% if @offers.is_a?(Array) %>
    <%= render :partial => 'list' %>
    <% else %>
    <%= @offers %>
    <% end %>
  </div>
  <% end %>
    </div>
    </div>
  </div>
  
